<h2>Teas</h2>

<hr>
<div class="row">
  {{#each teas}}
    <div class="col-md-4 mb-5">
      <div class="card" style="width: 18rem;">
        <img src="{{image}}" class="card-img-top" alt="{{name}}">
        <div class="card-body">
          <h5 class="card-title">{{name}}</h5>
          <p class="card-text">{{origin}}</p>
          <a href="/teas/{{_id}}">See Details</a>
          
        </div>
      </div>
    </div>
  {{/each}}
  
  <hr />
</div>
   