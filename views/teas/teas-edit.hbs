<h2>Edit Info</h2>
<div class="row">
  <div class="col-md-6">
    <form action="/teas/{{teaEdit.id}}/edit" method="post" enctype="multipart/form-data"> {{!-- !!! --}}
      <div class="form-group">
        <label>Name:
          <input type="text" name="name" value ="{{teaEdit.name}}" class="form-control" />
        </label>
      </div>

      <div class="form-group">
        <label>Description:
          <textarea name="description" cols="30" rows="4" class="form-control"> {{teaEdit.description}} </textarea>
        </label>
      </div>
      <label> Origin:
       <input type="tel" name="origin" value ="{{teaEdit.origin}}" />
      </label>
      <label> Type:
       <input type="tel" name="type" value ="{{teaEdit.type}}" />
      </label>
      <label> Caffeine:
       <input type="tel" name="caffeine" value ="{{teaEdit.caffeine}}" />
      </label>
      <div class="form-group">
        <label>Taste Description:
          <textarea name="tasteDescription" cols="30" rows="4" class="form-control">{{teaEdit.tasteDescription}}</textarea>
        </label>
      </div>

      <div class="form-group">
        <label>Image:
          <input type="file" name="tea-cover-image" class="form-control-file" />
          <input type="text" name="existingImage" hidden value="{{teaEdit.image}}">
        </label>
      </div>

      <button type="submit" class="btn btn-primary">Edit</button>
    </form>
  </div>
</div>