  <div class="card card-form card mx-auto" style="max-width: 600px; margin-top: 20px;">
  <h2 class="card-title text-center mt-2">New Tea</h2>
  <div class="card-body">
    <form action="/teas/create" method="post" enctype="multipart/form-data">
      <div class="form-group">
        <label for="name">Name:</label>
        <input type="text" id="name" name="name" class="form-control">
      </div>
      
      <div class="form-group">
        <label for="description">Description:</label>
        <textarea id="description" name="description" cols="30" rows="4" class="form-control"></textarea>
      </div>
      
      <div class="form-group">
        <label for="origin">Origin:</label>
        <input type="text" id="origin" name="origin" class="form-control">
      </div>
      
      <div class="form-group">
        <label for="type">Type:</label>
        <input type="text" id="type" name="type" class="form-control">
      </div>
      
      <div class="form-group">
        <label for="caffeine">Caffeine:</label>
        <input type="text" id="caffeine" name="caffeine" class="form-control">
      </div>
      
      <div class="form-group">
        <label for="tasteDescription">Taste Description:</label>
        <textarea id="tasteDescription" name="tasteDescription" cols="30" rows="4" class="form-control"></textarea>
      </div>
      
      <div class="form-group">
        <label for="tea-cover-image" class="custom-file-label">Image:</label>
        <input type="file" id="tea-cover-image" name="tea-cover-image" class="form-control-file custom-file-input">
      </div>
      
      <div class="form-group d-flex justify-content-end">
        <button type="submit" class="btn btn-success btn-block">Create</button>
      </div>
    </form>
  </div>
