<div class="card mx-auto" style="width: 40%">

    <img src="{{teas.image}}" class="card-img-top" alt="{{teas.name}}">

<div class="card-body"></div>
<h2 class="card-title">Tea: {{teas.name}}</h2>
<p class="card-text">Type: {{teas.type}}</p>
<p class="card-text">Origin : {{teas.origin}}</p>
<p class="card-text">Caffeine: {{teas.caffeine}}</p>
<p class="card-text">Description: {{teas.description}}</p>
<p class="card-text">Taste-Description: {{teas.tasteDescription}}</p>

<a href="/teas/{{teas._id}}/edit"><button>Edit</button></a>
            

<form action="/teas/favorite/{{teas._id}}" method="post">
            <button type="submit">Add to favorites</button>
        </form>

<form action="/review/create/{{teas._id}}" method="post">
  
    <label for="content">Content</label>
    <textarea name="content" id="content" cols="30" rows="5"></textarea>
    <button type="submit">Create the review</button>
</form>
</div> 

<!-- End of the Form to Create a Review -->
<br>
<!-- Display all the Reviews of the Book that we're seeing -->
    {{#each teasReviews}}
    <div>
        <!-- Actually displaying the review -->
        
        <p><span>By {{author.username}}</span>: {{content}}</p>
        <!-- Deleting the Review -->
        {{#ifCond author.username ../user.username}}
        <form action="/review/delete/{{../teas._id}}/{{_id}}" method="post">
            <button type="submit">Delete</button>
        </form>
        {{/ifCond}}
    </div>
    {{/each}}
    <a href="/teas">Return</a>
</div>