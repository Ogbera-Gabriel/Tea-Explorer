<h2>Tea: {{teas.name}}</h2>

<div>
    <img src="{{teas.image}}"  width="600px" height="600px" alt="{{teas.name}}">
</div>

<p>Type: {{teas.type}}</p>
<p>Origin : {{teas.origin}}</p>
<p>Caffeine: {{teas.caffeine}}</p>
<p>Description: {{teas.description}}</p>
<p>Taste-Description: {{teas.tasteDescription}}</p>

<form action="/teas/favorite/{{teas._id}}" method="post">
            <button type="submit">Add to favorites</button>
        </form>

<form action="/review/create/{{teas._id}}" method="post">
  
    <label for="content">Content</label>
    <textarea name="content" id="content" cols="30" rows="5"></textarea>
    <button type="submit">Create the review</button>
</form>
<!-- End of the Form to Create a Review -->
<br>
<!-- Display all the Reviews of the Book that we're seeing -->
    {{#each teasReviews}}
    <div>
        <!-- Actually displaying the review -->
        
        <p><span>By {{author.username}}</span>: {{content}}</p>
        <!-- Deleting the Review -->
        {{#ifCond author.username ../user.username}}
        <form action="/review/delete/{{../teas._id}}/{{_id}}" method="post">
            <button type="submit">Delete</button>
        </form>
        {{/ifCond}}
    </div>
    {{/each}}
    <a href="/teas">Return</a>
